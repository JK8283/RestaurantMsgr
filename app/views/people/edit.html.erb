<% if @people.errors.any? %>
	<h2> The following errors prevented your person from saving: </h2>
<ul>
	<% @people.errors.full_messages.each do |msg| %>
		<li> <%= msg %> </li>
	<% end %>
</ul>
<% end %>

<li> <%= "Current time: #{Time.now.strftime "%I:%M %P (%m/%d)"}" %> </li>
<li> <%= "Time Arrived: " + (@people.created_at.in_time_zone("Pacific Time (US & Canada)").strftime "%I:%M %P (%m/%d)")  %> <br>
<li> <%= "Current estimated seating time: #{@people.seating_time}" %> </li>

